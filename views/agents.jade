extends sidebar
block div#mycontent
  
  div.caption
    i(class = "fa fa-user")
      span 
        |Agents Information
    div
    div(class = "control-group span6")
      label
        | Search :
       
      input(type="search" class="light-table-filter form-control input-medium input-inline" data-table="agentstable" placeholder="Filter")
      a(href ='/agents/downloadcsv/',class = "downloadcsv btn btn-info")
        | Export data in CSV
  
    div.bodycontainer.table-scrollable
      table(class = "table table-striped table-bordered table-hover ",id = "agents")
        thead
          tr
            td 
              span
                |Name
            td
              span
                |Email
            td
              span
                |Country
            td
              span
                |Company
            td
              span
                |Website
            td
              span
                |Role
            td
              span
                |IsAgent?
            td
              span
                |IsAdmin
            
        tbody
          - each object in mydata
            tr
              td= object.firstname + object.lastname
              td=object.email
              td=object.country
              td=object.companyName
              td=object.website
              td=object.role
              td=object.isAgent
              td=object.isAdmin
        
      
      
